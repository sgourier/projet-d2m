{% extends 'VimoliaBundle:Admin:standard_layout.html.twig' %}
{% block sonata_admin_content %}
    <div class="container-white container-webtv">
    </div>
    <div class="container-white container-webtv">
        <div class="title">
            Web TV
        </div>
        <div class="videos">
            {% for video in videos %}
                {% if loop.index == 1 %}
                    <div class="video video-principale">
                        <iframe width="420" height="315" src="http://www.youtube.com/embed/{{ video.id }}" frameborder="0" allowfullscreen value="{{ 'http://www.youtube.com/v/' ~  video.id }}"></iframe>
                        <div class="titre">
                            {{ video.title }}
                        </div>
                        <div class="description">
                            {{ video.description }}
                        </div>
                    </div>
                {% else %}
                    <div class="video autre-video">
                        <a target="_blank" href="tps://www.youtube.com/watch?v={{ video.id }}">
                            <img width="90%" src="{{ video.thumbnails.high.url }}" style="cursor:pointer" />
                        </a>
                        <div class="titre">
                            {{ video.title }}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock javascripts %}