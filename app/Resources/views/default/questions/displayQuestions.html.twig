{% extends "base.html.twig" %}
{% block body %}
    <div id="container-discussion" class="container-white">
        <div class="title">
            Liste des questions
        </div>

		{% if discussions|length != 0 %}
			<table>
				<thead>
					<th>Date</th>
					<th>Question</th>
					<th></th>
				</thead>
				<tbody>			
					{% for discussion in discussions %}
						<tr>
							<td>{{discussion.question.dateupd|date('d m Y')}}</td>
							<td>{{discussion.question.text|truncate(200)}}</td>
							<td><a href="{{ path('question', {'idDiscussion': discussion.id}) }}">Voir</a></td>
						</tr>
				    {% endfor %}
			    </tbody>
			</table>
		{% else %}
		    Aucune questions publiques pour le moment.<br>
		    Soyer le premier Ã  poser la votre.
		{% endif %}

    </div>
{% endblock body %}
