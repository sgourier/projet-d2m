<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ "titleDefault"|trans }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('js/jquery-ui/jquery-ui.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/nav.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/homepage.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/contactus.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/registration.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/questions.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/profile.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/practicionners.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/lib/component.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/lib/rating.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="fixed-container">
            <div class="logo">
                <a href="{{ path("homepage") }}">
                    <img src="{{ asset('img/nav/logo.png') }}" alt="Logo des maux et des mots">
                </a>
            </div>
            <ul class="nav">
                <li id="thumb-webtv"><a> Web TV</a></li>
                <li><a href="{{ path("questions") }}"> Questions  </a></li>
                <li><a href="{{ path("user_practList") }}"> Praticiens </a> </li>
                <li><a href="{{ path("contactus") }}"> Contactez-nous </a></li>
                <li><a href="{{ path("informations") }}"> Informations </a></li>
            </ul>
            <ul class="sous-menu-webtv">
                <li><a href="{{ path("webtv_interviews") }}"> Interviews </a></li>
                <li><a href="{{ path("webtv_emissions") }}"> Emissions </a></li>
                <li><a href="{{ path("webtv_conferences") }}"> Conferences </a></li>
            </ul>
            <a href="{{ path("questions_new") }}" class="button button-new">Je pose <br/> ma question</a>
            <div class="reseaux_sociaux">
                <div class="col-xs-offset-1 col-xs-2">
                     <a target="_blank" href="https://www.facebook.com/DesMauxDesMots">
                         <img src="{{ asset('img/homepage/reseaux_sociaux/facebook.png') }}" alt="">
                     </a>
                </div>
                <div class="col-xs-2">
                    <a target="_blank" href="https://twitter.com/desmauxdesmots">
                        <img src="{{ asset('img/homepage/reseaux_sociaux/twitter.png') }}" alt="">
                    </a>
                </div>
                <div class="col-xs-2">
                    <a target="_blank" href="https://www.pinterest.com/desmauxdesmots/">
                        <img src="{{ asset('img/homepage/reseaux_sociaux/pinterest.png') }}" alt="">
                    </a>
                </div>
                <div class="col-xs-2">
                    <a target="_blank" href="https://plus.google.com/+Desmauxetdesmots/posts">
                        <img src="{{ asset('img/homepage/reseaux_sociaux/google_plus.png') }}" alt="">
                    </a>
                </div>
                <div class="col-xs-2">
                    <a target="_blank" href="https://www.youtube.com/c/desmauxetdesmots">
                        <img src="{{ asset('img/homepage/reseaux_sociaux/youtube.png') }}" alt="">
                    </a>
                </div>
            </div>

            <div id="container-connexion" class="container">
                {% if app.user %}
                    <div class="col-xs-6">
                        <a href="{{ path("fos_user_profile_show") }}" class="button button-new connexion button-compte">Mon compte</a>
                    </div>
                    <div class="col-xs-6">
                        <a href="{{ path("fos_user_security_logout") }}" class="button button-new connexion button-log button-logout">Deconnexion</a>
                    </div>
                {% else %}
                    <div class="col-xs-6">
                        <a href="{{ path("fos_user_registration_register") }}" class="button button-new connexion button-compte">Inscription</a>
                    </div>
                    <div class="col-xs-6">
                        <a href="{{ path("fos_user_security_login") }}" class="button button-new connexion button-log button-login">Connexion</a>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="main-container">
            {% block body %}

            {% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
            <script src="{{ asset('js/jquery-ui/jquery-ui.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/rating.min.js') }}"></script>
            <script src="{{ asset('js/nav/sous-menu-webtv.js') }}"></script>
        {% endblock %}
    </body>
</html>
